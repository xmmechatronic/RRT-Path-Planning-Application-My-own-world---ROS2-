            <diffuse>0 1 0 1</diffuse>
            <emissive>0 0.5 0 1</emissive>
          </material>
        </visual>
      </link>
    </model>

    <!-- Finish Marker (Yellow Cylinder) -->
    <model name='finish_marker'>
      <static>1</static>
      <pose>3.64 7.39 1.5 0 0 0</pose>
      <link name='link'>
        <visual name='visual'>
          <geometry>
            <cylinder>
              <radius>0.3</radius>
              <length>0.1</length>
            </cylinder>
          </geometry>
          <material>
            <script>
              <uri>file://media/materials/scripts/gazebo.material</uri>
              <name>Gazebo/Yellow</name>
            </script>
            <ambient>1 0.84 0 1</ambient>
            <diffuse>1 0.84 0 1</diffuse>
            <emissive>0.5 0.42 0 1</emissive>
          </material>
        </visual>
      </link>
    </model>

    <!-- TurtleBot3 Burger Robot (Embedded) -->
    <include>
      <uri>model://turtlebot3_burger</uri>
      <name>turtlebot3</name>
      <pose>-3.73 -8.73 0.01 0 0 0</pose>
    </include>

  </world>
</sdf>
